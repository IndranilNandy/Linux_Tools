#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "grcpwrapper:" ../../../_verify/.allTools || echo "grcpwrapper:grcpwrapper" >>../../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(ifinstalled grcpwrapper) ]] && echo -e "\n${GREEN}[grcpwrapper] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[grcpwrapper] Setup process started.${RESET}"

yes | sudo ln -i -s "$(pwd)"/grcpwrapper.sh "$MYCOMMANDSREPO"/grcpwrapper && echo -e "\nCreated symbolink link grcpwrapper in $MYCOMMANDSREPO"

echo -e "${GREEN}[grcpwrapper] Setup finished.${RESET}"
