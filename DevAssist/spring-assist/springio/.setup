#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "springio:" ../../../_verify/.allTools || echo "springio:springio" >>../../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which springio) ]] && echo -e "\n${GREEN}[springio] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[springio] Setup process started.${RESET}"

yes | sudo ln -i -s "$(pwd)"/springio.sh "$MYCOMMANDSREPO"/springio && echo -e "\nCreated symbolink link springio in $MYCOMMANDSREPO"

echo -e "${GREEN}[springio] Setup finished.${RESET}"
