#!/bin/bash

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo "One or more prerequisites are still missing. Exiting." && exit 0

# Check if it is already installed
[[ -n $(which git) ]] && echo "[git] Already installed. Exiting." && exit 0

echo "[git] Setup process started."

# Enable execute permission on all shell scripts
find . -name "*.sh" | xargs -n1 chmod +x
./git_installer.sh

symlink=setgittool
yes | sudo ln -i -s $(pwd)/configurer/genericDiffAndMergeToolConfigurer/setgittool $MYCOMMANDSREPO/$symlink && echo -e "\nCreated symbolink link [$symlink] in $MYCOMMANDSREPO"
