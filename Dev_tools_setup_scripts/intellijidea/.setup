#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "intellij-idea-community:" ../../_verify/.allTools || echo "intellij-idea-community:intellij-idea-community" >>../../_verify/.allTools
grep -q "jetbrains-toolbox:" ../../_verify/.allTools || echo "jetbrains-toolbox:jetbrains-toolbox" >>../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which intellij-idea-community) ]] && echo -e "\n${GREEN}[intellij-idea-community] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[intellij-idea-community] Setup process started.${RESET}"
./intellijidea_installer.sh
./toolbox_installer.sh
echo -e "${GREEN}[intellij-idea-community] Setup finished.${RESET}"
