#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "npm:" ../../_verify/.allTools || echo "npm:npm" >>../../_verify/.allTools
grep -q "node.js:" ../../_verify/.allTools || echo "node.js:node" >>../../_verify/.allTools
grep -q "n:" ../../_verify/.allTools || echo "n:n" >>../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which node) ]] && echo -e "\n${GREEN}[n/node] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[n/node] Setup process started.${RESET}"
./nodejs_installer.sh
echo -e "${GREEN}[n/node] Setup finished.${RESET}"
