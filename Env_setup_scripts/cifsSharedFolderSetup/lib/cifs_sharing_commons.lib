

mount_cifs_sharing() {
    # Mount shared folder
    echo "pcname=$pcname.. sharedFolderInWindows=$sharedFolderInWindows.. defaultSharedFolder=$defaultSharedFolder.. winuser=$winuser"

    sudo mount.cifs //$pcname/$sharedFolderInWindows $defaultSharedFolder -o user="$winuser"
}

unmount_cifs_sharing() {
    # Unmount shared folder
    # echo "pcname=$pcname.. sharedFolderInWindows=$sharedFolderInWindows"
    sudo umount //$pcname/$sharedFolderInWindows
}

if_package_missing() {
    #prereqfile=$(basename $1 .sh).prereq
    prereqfile=${1}

    echo "prereq file = $prereqfile"
    missing=$(
        cat $prereqfile | 
    xargs -I XYZ echo "apt --installed list 2> /dev/null | grep XYZ |  wc -l" | 
    bash | 
    xargs -I ABC echo "test ABC -gt 0; echo \$?" | 
    bash | 
    grep 1 | 
    wc -l
    )
    echo "missing package = $missing"
    return $missing
}