# Aliases for K8 commands
##############################

k=kubectl

kg=kubectl get
kd=kubectl describe

ka=kubectl apply
kaf=kubectl apply -f

kc=kubectl create
kcf=kubectl create -f

ke=kubectl edit
###############################

kgn=kubectl get node
kgnw=kubectl get node -o wide
kgny=kubectl get node -o yaml

kdn=kubectl describe node
###############################

kgp=kubectl get pod
kgpw=kubectl get pod -o wide
kgpy=kubectl get pod -o yaml

kdp=kubectl describe pod
###############################

kgns=kubectl get namespace
kgnsw=kubectl get namespace -o wide
kgnsy=kubectl get namespace -o yaml
###############################

kgrc=kubectl get rc
kgrcw=kubectl get rc -o wide
kgrcy=kubectl get rc -o yaml

kdrc=kubectl describe rc
###############################

kgrs=kubectl get rs
kgrsw=kubectl get rs -o wide
kgrsy=kubectl get rs -o yaml

kdrs=kubectl describe rs
###############################

kgpv=kubectl get pv
kgpvw=kubectl get pv -o wide
kgpvy=kubectl get pv -o yaml

kdpv=kubectl describe pv
###############################

kgpvc=kubectl get pvc
kgpvcw=kubectl get pvc -o wide
kgpvcy=kubectl get pvc -o yaml

kdpvc=kubectl describe pvc
