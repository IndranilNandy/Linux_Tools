#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "myalias:" ../../../_verify/.allTools || echo "myalias:myalias" >>../../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which myalias) ]] && echo -e "\n${GREEN}[myalias] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[myalias] Setup process started.${RESET}"
yes | sudo ln -s -i $(pwd)/myalias.sh $MYCOMMANDSREPO/myalias
./aliaslist_configurer.sh

mycompl -W \"--list --set --config --help\" myalias

echo -e "${GREEN}[myalias] Setup finished.${RESET}"
