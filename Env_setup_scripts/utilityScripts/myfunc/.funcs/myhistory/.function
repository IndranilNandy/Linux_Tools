#!/bin/bash

export MYHISTORYSTATUS=0
add_to_myhistory() {
    [[ "$MYHISTORYSTATUS" == "1" ]] || return 0
    [[ $(echo "$*" | grep $(pwd)) ]] || history -s "cd $(pwd) && $*"
}

myhistory() {
    if [[ -z $(which myfunc) ]]; then
        curDir=$(pwd)
    else
        curDir=$(dirname "$(tracelink "$(which myfunc)")")
    fi

    case ${1} in
    --on)
        MYHISTORYSTATUS=1
        echo -e "MYHISTORYSTATUS is turned on"
        ;;
    --off)
        MYHISTORYSTATUS=0
        echo -e "MYHISTORYSTATUS is turned off"
        ;;
    --status)
        echo -e "[myhistory] MYHISTORYSTATUS=$MYHISTORYSTATUS"
        ;;
    --help)
        cat "$curDir"/.funcs/myhistory/myhistory.help
        ;;
    '')
        cat "$curDir"/.funcs/myhistory/myhistory.help
        ;;
    *)
        cat "$curDir"/.funcs/myhistory/myhistory.help
        ;;
    esac
}

preexec_functions+=(add_to_myhistory)
mycompl -W '"'--on --off --status --help'"' myhistory
