#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "myscriptref:" ../../../_verify/.allTools || echo "myscriptref:myscriptref" >>../../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which myscriptref) ]] && echo -e "\n${GREEN}[myscriptref] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[myscriptref] Setup process started.${RESET}"
yes | sudo ln -s -i $(pwd)/myscriptref_configurer.sh $MYCOMMANDSREPO/myscriptref

echo -e "[scriptrefs] Updating all script refs and corresponding symlinks"
myscriptref --sync && echo -e "[scriptrefs] Done"

mycompl -W \"--create --sym --ref --sync --config --help\" myscriptref

echo -e "${GREEN}[myscriptref] Setup finished.${RESET}"
