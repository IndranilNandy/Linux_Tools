#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "myshpath:" ../../../_verify/.allTools || echo "myshpath:myshpath" >>../../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which myshpath) ]] && echo -e "\n${GREEN}[myshpath] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[myshpath] Setup process started.${RESET}"

myscriptref --create myshpath.sh "$HOME/MyTools/Linux_Tools/Env_setup_scripts/utilityScripts/myshpath" myshpath
mycompl -W \"add remove --help --path= --export=\" myshpath

echo -e "${GREEN}[myshpath] Setup finished.${RESET}"
