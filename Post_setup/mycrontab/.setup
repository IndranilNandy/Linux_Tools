#!/bin/bash

# Insert entry of this tool in .allTools. This is to be used in the verification stage post setup.
grep -q "mycrontab:" ../../_verify/.allTools || echo "mycrontab:mycrontab" >>../../_verify/.allTools

#Check if all prerequisites are installed, and install the missing ones
prereq --install ".prereq"

# Exit if still missing any prerequisite
[[ $(prereq --missing ".prereq") ]] && echo -e "${RED}One or more prerequisites are still missing. Exiting.${RESET}" && exit 0

# Check if it is already installed
[[ -n $(which mycrontab) ]] && echo -e "\n${GREEN}[mycrontab] Already installed. Exiting.${RESET}" && exit 0

echo -e "${YELLOW}[mycrontab] Setup started${RESET}"

# ./workspace_clone.sh
yes | sudo ln -s -i "$(pwd)"/mycrontab_setup.sh "$MYCOMMANDSREPO"/mycrontab
mycrontab --backup -cron-def
mycrontab --backup -mycron-def
mycrontab --init
mycompl -W \"--config --schedule --job-name= --job-path= --users --jobs --backup --show-logs --show-backups --clean --clean-logs --clean-backups --help -a -u= -mycron-def -cron-def\" mycrontab
echo -e "${YELLOW}[mycrontab] Setup completed.${RESET}"
