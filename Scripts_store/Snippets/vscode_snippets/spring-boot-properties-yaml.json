    "Common Config": {
        "prefix": [
			"[snp] Common Config",
			"[sb-config] Common Config",
		],
        "body": [
            "spring:",
            "\tapplication:",
            "\t\tname: productsvc",
            "\tconfig:",
            "\t\timport:",
            "\t\t\t- optional:file:./config/external.yaml",
            "\t\t\t# - optional:file:.env[.properties]",
            "\tprofiles:",
            "\t\tinclude:",
            "\t\t\t- actuator",
            "\t\t\t- logging",
            "\t\tgroup:",
            "\t\t\tdevpsql:",
            "\t\t\t\t- postgresql",
            "\t\t\t\t- jpa",
            "\t\t\tdevmysql:",
            "\t\t\t\t- mysql",
            "\t\t\t\t- jpa",
            "\t\t\ttest:",
            "\t\t\t\t- h2",
            "\t\t\t\t- jpa",
            "\t\tactive:",
            "\t\t\t- test",
            "",
            "server:",
            "\tport: 8081",
            "",
            "# debug: true",
            "# trace: true",
        ],
        "description": "Application yaml - common config"
    },
    "Logging Config": {
        "prefix": [
			"[snp] Logging Config",
			"[sb-config] Logging Config",
		],
        "body": [
        "# Ref.: https://docs.spring.io/spring-boot/docs/current/reference/html/features.html#features.logging",
        "spring:",
        "\tconfig:",
        "\t\tactivate:",
        "\t\t\ton-profile:",
        "\t\t\t- logging",
        "",
        "custom:",
        "\tlogging:",
        "\t\tpattern:",
        "\t\t\tverbosity:",
        "\t\t\t\tlevel1: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} %highlight{%-5p} %pid --- [%t][%T] %style{[%-40.40logger{1.}]}{magenta}: %m%highlight{%rEx{full}}%n\"",
        "\t\t\t\tlevel2: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} %highlight{%-5p} %pid --- [%t][%T] %style{[%-40.40logger{1.}]}{magenta} %style{[%-40.40class{1.}]}{blue}: %m%highlight{%rEx{full}}%n\"",
        "\t\t\t\tlevel3: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} %highlight{%-5p} %pid --- [%t][%T] %style{[%-50.50logger{1.}]}{magenta} %style{[%-90.90location{1.}]}{cyan}: %m%highlight{%rEx{full}}%n\"",
        "\t\t\t\tlevel4: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} %highlight{%-5p} %pid --- [%t][%T] %style{[%-50.50logger{1.}]}{magenta} %style{[%-50.50class{1.}]}{blue} %style{[%-90.90location{1.}]}{cyan}: %m%highlight{%rEx{full}}%n\"",
        "\t\t\t\tlevel5: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%N] %highlight{%-5p} %pid --- [%t][%T] %style{[%-50.50logger{1.}]}{magenta} %style{[%-50.50class{1.}]}{blue} %style{[%-90.90location{1.}]}{cyan}: %m%highlight{%rEx{full}}%n\"",
        "\t\t\t\tlevel6: \"%d{ISO8601_OFFSET_DATE_TIME_HHCMM} [%N] %highlight{%-5p} %pid --- [%t][%T] %style{[%-50.50logger{1.}]}{magenta} %style{[%-50.50class{1.}]}{blue} %style{[%-90.90location{1.}]}{cyan} << %map %style{%x}{BG_Blue} %style{%X}{BG_Yellow} %style{%notEmpty{[%marker]}}{Yellow} >>: %m%highlight{%rEx{full}}%n\"",
        "",
        "logging:",
        "\t# This will override logging.file.name settings. This is needed ONLY IF you want to provide your own log4j2.yaml",
        "\t# TURNING OFF to use default logger configuration as of now, mainly due to Console output pattern still not finalized",
        "\tconfig: ./log-config/log4j2-spring-root.yaml",
        "\tlog4j2:",
        "\t\tconfig:",
        "\t\t\toverride:",
        "\t\t\t\t- ./log-config/log4j2-spring-app.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-controller.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-service.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-repository.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-model.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-autoconfiguration.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-web-group.yaml",
        "\t\t\t\t- ./log-config/log4j2-spring-sql-group.yaml",
        "\tfile:",
        "\t\t# This is effective only if log4j2.yaml isn't explicitly created or logging.config isn't declared",
        "\t\tname: ./logs/spring-logs/\\${spring.application.name}.log",
        "\t\t# This is not working along with logging.file.path. Hench commenting out.",
        "\t\t# path: ./applog",
        "\tpattern:",
        "\t\t# This will NOT override your confiuration set in log4j2.yaml",
        "\t\tconsole: \\${custom.logging.pattern.verbosity.level1}",
        "\t\tfile: \\${custom.logging.pattern.verbosity.level1}",
        "\tthreshold:",
        "\t\t# set at default \"trace\"",
        "\t\t# This will NOT override your confiuration set in log4j2.yaml",
        "\t\tconsole: \"trace\"",
        "\t\tfile: \"trace\"",
        "\tgroup:",
        "\t\ttomcat: \"org.apache.catalina,org.apache.coyote,org.apache.tomcat\"",
        "\t# level:",
        "\t\t# set at default \"info\"",
        "\t\t# CAUTION: This will override your confiuration set in log4j2.yaml",
        "\t\t# web: \"info\"",
        "\t\t# sql: \"info\"",
        "\t\t# root: \"info\"",
        "\t\t# tomcat: \"info\"",
        "\t\t# \"[org.hibernate]\": \"info\"",
        "\t\t# \"[org.springframework.web]\": \"trace\"",
        "\t\t# \"[org.springframework.boot]\": \"info\"",
        "\t\t# \"[com.mydomain.core.product]\": \"debug\""
        ],
        "description": "Application yaml - Logging config"
    },
